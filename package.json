{
  "name": "ledger-service",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && tsc-esm-fix dist",
    "start": "node dist/server.js",
    "migrate:create": "knex --knexfile src/database/knex.ts migrate:make",
    "migrate:apply": "knex --knexfile src/database/knex.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/database/knex.ts migrate:rollback",
    "lint": "eslint src test --ext .ts,.js",
    "lint:fix": "eslint src test --ext .ts,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@eslint/js": "^9.35.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "knex": "^3.1.0",
    "pg": "^8.11.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5"
  }
}
